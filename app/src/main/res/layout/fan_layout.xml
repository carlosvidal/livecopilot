<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Centro del abanico - Burbuja principal -->
    <ImageView
        android:id="@+id/center_bubble"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/bubble_bg"
        android:src="@drawable/ic_shortcut"
        android:scaleType="center"
        android:padding="16dp" />

    <!-- Botón Cerrar - Encima de la burbuja original -->
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/gray_circle_bg"
        android:src="@drawable/ic_close"
        android:scaleType="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Los botones del abanico serán posicionados dinámicamente -->
    <ImageView
        android:id="@+id/btn_catalog"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_circle_bg"
        android:src="@drawable/ic_grid"
        android:scaleType="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_gallery"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_circle_bg"
        android:src="@drawable/ic_image"
        android:scaleType="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_cart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_circle_bg"
        android:src="@drawable/ic_shopping_cart"
        android:scaleType="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_circle_bg"
        android:src="@drawable/ic_settings"
        android:scaleType="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_favorites"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_circle_bg"
        android:src="@drawable/ic_favorite"
        android:scaleType="center"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

</FrameLayout>