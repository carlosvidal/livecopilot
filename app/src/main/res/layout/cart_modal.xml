<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@drawable/shortcut_bg"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shopping_cart"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carrito de Compras"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/btn_close_cart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/gray_circle_bg"
            android:src="@drawable/ic_close"
            android:scaleType="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Content -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Carrito de Compras\n\nAquí podrás:\n• Ver productos agregados\n• Gestionar cantidades\n• Procesar pedidos\n• Enviar links de pago\n\n(Próximamente)"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>